# Environment Configuration
# Copy this file to .env and update the values
#
# NOTE: This .env file is ALL YOU NEED for configuration!
# The config.yaml file is optional - environment variables override it anyway.
# You can run the entire system with just this .env file.

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=aiagent
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=cold_calling_agent

# ============================================================================
# Speech-to-Text Configuration
# ============================================================================
# Available engines: whisper, deepgram, azure, google
STT_ENGINE=whisper
STT_LANGUAGE=de

# Whisper STT (local, free)
STT_WHISPER_MODEL_SIZE=base  # tiny, base, small, medium, large
STT_WHISPER_DEVICE=cpu       # cpu or cuda

# Deepgram STT (API, requires key)
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here
STT_DEEPGRAM_MODEL=nova-2    # nova-2 recommended for German

# Azure Speech STT (API, requires key)
# Get your key from: https://portal.azure.com/
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=westeurope

# Google Cloud STT (API, requires credentials)
# Download JSON credentials from: https://console.cloud.google.com/
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json
STT_GOOGLE_MODEL=latest_long

# ============================================================================
# Text-to-Speech Configuration
# ============================================================================
# Available engines: coqui, mimic3, elevenlabs, azure, google
TTS_ENGINE=coqui
TTS_LANGUAGE=de

# Coqui TTS (local, free)
TTS_COQUI_MODEL=tts_models/de/thorsten/tacotron2-DDC
TTS_COQUI_VOCODER=vocoder_models/de/thorsten/hifigan
TTS_COQUI_DEVICE=cpu         # cpu or cuda
TTS_COQUI_SPEAKER=           # Optional: speaker name for multi-speaker models

# Mimic3 TTS (local server, free)
TTS_MIMIC3_VOICE=de_DE/thorsten_low
TTS_MIMIC3_URL=http://localhost:59125

# ElevenLabs TTS (API, requires key)
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
TTS_ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default: Rachel (change for German voice)
TTS_ELEVENLABS_MODEL=eleven_multilingual_v2
# Voice settings
TTS_ELEVENLABS_STABILITY=0.5
TTS_ELEVENLABS_SIMILARITY_BOOST=0.75

# Azure Speech TTS (API, uses same key as STT)
TTS_AZURE_VOICE=de-DE-KatjaNeural  # German female voice
# Other options: de-DE-ConradNeural (male), de-DE-AmalaNeural (female)
TTS_AZURE_RATE=+0%                  # Speaking rate adjustment
TTS_AZURE_PITCH=+0%                 # Pitch adjustment

# Google Cloud TTS (API, uses same credentials as STT)
TTS_GOOGLE_VOICE=de-DE-Wavenet-C   # German female voice
# Other options: de-DE-Wavenet-B (male), de-DE-Neural2-F (female)
TTS_GOOGLE_SPEAKING_RATE=1.0
TTS_GOOGLE_PITCH=0.0

# ============================================================================
# Application Configuration
# ============================================================================
APP_HOST=0.0.0.0
APP_PORT=8080
APP_DEBUG=false

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/aiagent.log

# ============================================================================
# Training Configuration
# ============================================================================
TRAINING_ENABLED=true
AUTO_TRAIN_AFTER_CALLS=5

# ============================================================================
# Emotion Recognition Configuration
# ============================================================================
EMOTION_RECOGNITION_ENABLED=true
EMOTION_CONFIDENCE_THRESHOLD=0.7

# ============================================================================
# File Paths
# ============================================================================
MODELS_PATH=models/
RECORDINGS_PATH=recordings/
LOGS_PATH=logs/

# ============================================================================
# Call Settings
# ============================================================================
MAX_CALL_DURATION_MINUTES=15
CALL_RECORDING_ENABLED=true