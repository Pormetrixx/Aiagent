# Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=aiagent
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=cold_calling_agent

# Speech Recognition
STT_MODEL_SIZE=base
STT_DEVICE=cpu

# Text-to-Speech
TTS_ENGINE=coqui
TTS_DEVICE=cpu

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/aiagent.log

# Application
APP_HOST=0.0.0.0
APP_PORT=8080
APP_DEBUG=false

# Training
TRAINING_ENABLED=true
AUTO_TRAIN_AFTER_CALLS=5

# Emotion Recognition
EMOTION_RECOGNITION_ENABLED=true
EMOTION_CONFIDENCE_THRESHOLD=0.7

# Paths
MODELS_PATH=models/
RECORDINGS_PATH=recordings/
LOGS_PATH=logs/